{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2016",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "strict": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["**/dist", "**/__tests__"]
}
