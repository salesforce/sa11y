{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      "helpers:disableTypesNodeMajor"
    ],
    "major": {
        "extends": [":dependencyDashboardApproval"]
    },
    "packageRules": [
        {
            "groupName": "node",
            "matchPackageNames": ["node"],
            "extends": [":disableMajorUpdates"]
        },
        {
            "matchPackagePatterns": ["^@wdio/"],
            "matchPackageNames": ["webdriverio", "wdio-chromedriver-service"],
            "allowedVersions": "<7",
            "groupName": "WebdriverIO"
        },
        {
          "matchPackageNames": ["axe-core"],
          "extends": [":dependencyDashboardApproval"]
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchPackagePatterns": ["chromedriver", "cspell", "eslint", "prettier"],
            "automerge": true
        }
    ]
}
